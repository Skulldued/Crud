<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./css/stylesheet.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
  </head>
  <body>
    <div class="w-full bg-zinc-800 p-10">
      <div class="py-8">
        <a href="/" class="text-sky-500 p-2 rounded-xl text-2xl"
          >Back to home</a
        >
      </div>
      <div>
        <div class="text-white my-3">
          <h2 class="text-3xl">All Users</h2>
        </div>
      
          <% if(users.length>0){%> 
            <div class="flex flex-wrap gap-10">
            <% users.forEach((user)=>{ %>
          <div
            class="w-[250px] bg-gray-700 rounded-md p-3 flex flex-col items-center justify-center"
          >
            <div
              class="max-w-[200px] max-h-[250px] bg-slate-400 overflow-hidden rounded-md my-4"
            >
              <img src="<%= user.image %>" class="object-cover" alt="" />
            </div>
            <div class="text-white">
              <h3 class="text-2xl"><%= user.name %></h3>
              <p class="text-gray-400"><%= user.email%></p>
              <div class="my-7 flex justify-between">
                <a href="/edit/<%= user._id%>" class="text-xl text-sky-800">Edit</a>
                <a href="/delete/<%= user._id %>" class="text-xl text-red-800"
                  >Delete</a
                >
              </div>
            </div>
          </div>
          <% }) %>
        </div>
       <% }else {%>
        <h3 class="text-red-800 text-2xl">No User Here</h3>
        <%  } %>
      </div>
    </div>
  </body>
</html>
